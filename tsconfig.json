{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["dom", "esnext"],
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "~/ui/*": ["src/ui/*"],
      "~/system": ["src/system"]
    },
    "types": ["vite/client", "react", "react-dom", "chrome"]
  },
  "include": ["src", "src/**/*.json", "src/**/*.html"]
}
